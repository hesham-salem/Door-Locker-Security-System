#include"HMI_ECU.h"
char buff[16];
uint8 key=0;
uint8 str[100]="";
int main()
{
LCD_init();

while(1)
{
	key =KeyPad_getPressedKey();
	key =itoa(key);
	LCD_intgerToString(key);
	//LCD_displayCharacter(key);
	_delay_ms(1000);

}
}
void intgerToString(int data)
{
	/* buffer to hold acii result */
	itoa(data,buff,10); /* 10 for decimal base */
}
