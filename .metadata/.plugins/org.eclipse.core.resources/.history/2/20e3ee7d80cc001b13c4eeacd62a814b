#include"HMI_ECU.h"
char buff[16];
uint8 key=0;
uint8 str[100]="";
uint8 enter=1;
void intgerToString(int data);

int main()
{
LCD_init();

while(1)
{


	key =KeyPad_getPressedKey();

	while(enter==1)
	{
	key =KeyPad_getPressedKey();
//	if(key=='n')
	//	continue;
	_delay_ms(400);
	if(key==13)
		break;
	intgerToString(key);
	strcat(str,buff);
	//key=0;
	}
	LCD_displayString(str);
	_delay_ms(1000);

}
}
void intgerToString(int data)
{
	/* buffer to hold acii result */
	itoa(data,buff,10); /* 10 for decimal base */
}
